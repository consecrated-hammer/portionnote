# =============================================================================
# SNACK SENSE - SELF HOSTING CONFIGURATION
# =============================================================================
# Copy this file to .env and customize for your installation.
#
# Notes:
# - Do not commit .env files.
# - Use strong random values for secrets.
# =============================================================================

# =============================================================================
# CORE APP SETTINGS (REQUIRED)
# =============================================================================
API_PORT=8000
WEB_PORT=5173
WEB_ORIGIN=http://localhost:5173
VITE_API_BASE_URL=http://localhost:8000

DATABASE_FILE=./.data/portionnote.sqlite
ENVIRONMENT=development

# =============================================================================
# ADMIN ACCESS (REQUIRED)
# =============================================================================
ADMIN_EMAIL=admin@portionnote.local
ADMIN_PASSWORD=change-me
INVITE_CODE=invite-me

# =============================================================================
# SESSION SECURITY (REQUIRED)
# =============================================================================
# Generate a secure random string:
#   openssl rand -hex 32
SESSION_SECRET=change-me
SESSION_COOKIE_NAME=portionnote_session
SESSION_DAYS=14

# =============================================================================
# GOOGLE SIGN IN (OPTIONAL)
# =============================================================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL=http://localhost:8000/api/auth/google/callback
SEED_INVITE_EMAILS=
SEED_GOOGLE_USERS=
SEED_GOOGLE_ADMINS=

# =============================================================================
# AI SUGGESTIONS (OPTIONAL)
# =============================================================================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5-mini
OPENAI_FALLBACK_MODELS=gpt-4.1,gpt-4o-mini
OPENAI_AUTOSUGGEST_MODEL=gpt-5-mini
OPENAI_BASE_URL=https://api.openai.com/v1/chat/completions

# =============================================================================
# OPTIONAL: LOGGING
# =============================================================================
# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_CONSOLE_LEVEL=INFO
LOG_FILE_LEVEL=DEBUG
LOG_DIR=./logs
LOG_FILE_NAME=portionnote.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_FRONTEND_RATE_LIMIT_PER_MIN=0

VITE_LOG_LEVEL=INFO
VITE_LOG_CAPTURE_CONSOLE=true
VITE_LOG_BATCH_INTERVAL_MS=5000
VITE_LOG_BATCH_SIZE=10

# =============================================================================
# OPTIONAL: TRAEFIK
# =============================================================================
DOMAIN_PRIMARY=portionnote.yourdomain.com
TRAEFIK_NETWORK=traefik_proxy
